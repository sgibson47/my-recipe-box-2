body { 
  background-image: url(<%= asset_path 'table.jpg'%>); 
  background-size: 100%;
}

h1 {
    font-size: 40px;
    line-height: 42px;
    color: #045638;
    text-shadow: 0 2px 3px white;
  }

a {
  text-decoration: none;
  color: #045638;
}

.block { 
  background-color: white;
  opacity: .7;
  border-radius: 3px;
}

#alert {
  padding: 10px;
  background: #FFEC01;
  color: black;
  margin-bottom: 15px;
  text-align: center;
  opacity: .7;
}

.body-title {
  margin-left: 15%;
}

.edit_delete {
  background-color: #045638;
  opacity: .8;
  content: "";
  padding: 1%;
  overflow: auto;
  margin-top: 4%;
}

.main {
  margin-left: 15%;
}

.col-not-9 {
  float: left;
  width: 7%;
  margin-right: 2.3%;
}

.col-9 {
  float: right;
  width: 7%;
}

form {
  text-align: center;
  background-color: white;
  opacity: .7;
  border-radius: 3px;
  padding-bottom: 2%;
}

label {
  color: #1E4800;
  float: left;
  clear: left;
  font-size: 20px;
}


.edit{
  float: left;
  width: 20%;
  text-align: center;
}

.delete {
 float: right;
 width: 20%;
 text-align: center;
}

.form_fields {
  color: #1E4800;
  float: right;
  clear: right;
  line-height: 3%;
}
.submit_class {
  color: green;
}

