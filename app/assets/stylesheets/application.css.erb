body { 
  background-image: url(<%= asset_path 'table.jpg'%>); 
  background-size: 100%;
}

h1 {
    font-size: 40px;
    line-height: 42px;
    color: #045638;
    text-shadow: 0 2px 3px white;
  }

#alert {
  padding: 10px;
  background: #FFEC01;
  color: black;
  margin-bottom: 15px;
  text-align: center;
  opacity: .7;
}

.body-title {
  margin-left: 15%;
}

.main {
  margin-left: 15%;
}

.col-not-9 {
  float: left;
  width: 7%;
  margin-right: 2.3%;
}

.col-9 {
  float: right;
  width: 7%;
}

form {
  text-align: center;
}

label {
  color: #1E4800;
  float: left;
  clear: left;
  font-size: 20px;
}

.form_fields {
  color: #1E4800;
  float: right;
  clear: right;
  line-height: 3%;
}
.submit_class {
  color: green;
}
