<div class="recipes-index">
  <% unless params[:user_id]%>
    <div class="filter-bar">
      <div class="col-not-4">
        Sort Recipes by Age<br>
        <%=new_link%><br>
        <%=old_link%>
      </div><!--col-not-4-->
      <div class="col-not-4">
        Filter Recipes by Ingredient
        <%=render "filter_by_ingred"%>
      </div><!--col-not-4-->
      <div class="col-not-4">
        Sort Recipes by Times Made<br>
        <%=most_link%><br>
        <%=least_link%>
      </div><!--col-not-4-->
      <div class="col-4">
        Sort Rated Recipes<br>
        <%=best_link%><br>
        <%=worst_link%>
      </div><!--col-4-->
    </div><!--filter-bar-->
  <%end%>
  <div class="greeting">
    <h1>Recipes</h1>
  </div><!--greeting-->
  <div class="main">
    <ol>
      <%@recipes.each do |r|%>
        <li>
          <%=link_to r.name, recipe_path(r)%>
        </li>
      <%end%>
    </ol>
  </div><!--main-->
</div><!-- recipes-index -->