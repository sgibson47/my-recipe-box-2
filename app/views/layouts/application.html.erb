<!DOCTYPE html>
<html>
  <head>
    <title>MyRecipeBox2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if logged_in? %>
      <div class="logged-in-navbar">
        
        
        <div class="title">
          <%= link_to 'My Recipe Box', '/' %>
        </div><!--title-->
        
        <div class="col-not-9">
          <%=link_to "Your Page", "/users/#{current_user.id}"%>
        </div><!--col-not-9-->

        <div class="col-not-9">
          <%=link_to "Recipes", "/recipes"%>
        </div><!--col-not-9-->
        <div class="col-not-9">
          <%=link_to "Your Recipes", "/users/#{current_user.id}/recipes"%>
        </div><!--col-not-9-->
        <div class="col-not-9">
          <%=link_to "Save a Recipe", "/recipes/new"%>
        </div><!--col-not-9-->
          
        <div class="col-not-9">
          <%=link_to "Ingredients", "/ingredients"%>
        </div><!--col-not-9-->
        <div class="col-not-9">
          <%=link_to "Save an Ingredient", "/ingredients/new"%>
        </div><!--col-not-9-->

        <div class="col-not-9">
          <%=link_to "What Everyone's Making", "/makings"%>
        </div><!--col-not-9-->
        <div class="col-not-9">
          <%=link_to "What You've Made", "/users/#{current_user.id}/makings"%>
        </div><!--col-not-9-->
        <div class="col-9">
          <%=link_to "Record What You Made", "/users/#{current_user.id}/makings/new"%>
        </div><!--col-9-->

      </div><!--logged-in-navbar-->
    <% else %>
      <div class="logged-out-title-bar">
        <div class="title">
          <%= link_to 'My Recipe Box', '/' %>
        </div><!--title-->
      </div><!--logged-out-title-bar-->
    <%end%> 


    <% if flash[:message] %>
      <div id="alert"><%= flash[:message] %></div>
    <% end %>
    <%= yield %>
    <div class="footer">
        <% if logged_in? %>
        <div class="greeting">
          You're logged in as: <%=current_user.name %>
        </div><!--greeting-->
        <div id="log_out">
          <%=link_to "Log Out", '/signout', method: :delete %>
        </div><!--logout-->
      <% end %>
    </div><!--footer-->
  </body>
</html>
