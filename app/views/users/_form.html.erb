<%= form_for(@user) do |f| %>
  <% if f.object.errors.any? %>
    <% f.object.errors.full_messages.each do |message|%>
      <%= message %><br>
    <%end%>
    <br>
  <%end%>
  
  <%= f.label :name%>
  <%= f.text_field :name, :class => "form_fields"%><br>
  <%= f.label :email%>
  <%= f.text_field :email, :class => "form_fields"%><br>
  <%= f.label :password%>
  <%= f.password_field :password, :class => "form_fields" %><br>
  <%= f.label :password_confirmation%>
  <%= f.password_field :password_confirmation, :class => "form_fields" %><br>
  <%= f.submit :class => "submit_class" %>
<%end%>