<div id="users-show">
  <div class="greeting">
    <h1>Welcome back, <%=@user.name%></h1>
  </div><!--greeting-->

  <div class="block user-recent-makings">
    <h3>
      What you've made lately:
      <br>
    </h3>
    <%= render "makings/display_makings", makings: five_most_recent_user_makings %>
  </div><!--user-recent-makings-->

  <div class="block recent-makings">
    <h3>
      What everyone's made lately:
      <br>
    </h3>
    <%= render "makings/display_makings", makings: five_most_recent_recipes %>
  </div><!--recent-makings-->

  <div class="block recent-recipes">
    <h3>
      New recipes from everyone:
      <br>
    </h3>
    <%= render "recipes/display_recipes", recipes: five_most_recent_user_recipes %>
  </div><!--user-recent-makings-->
</div><!--users-show-->