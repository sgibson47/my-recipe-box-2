<%= form_for(@ingredient) do |f| %>
  <% if f.object.errors.any? %>
    <% f.object.errors.full_messages.each do |message|%>
      <%= message %><br>
    <%end%>
    <br>
  <%end%>
  

  Name: <%= f.text_field :name%><br>
  Serving Size: 
  <%= f.number_field :serving_size_number, placeholder: "number (e.g. 3)"%> <%= f.text_field :serving_size_unit, placeholder: "unit (e.g. cup)"%>
  <br>
  <%= f.submit %>
<%end%>